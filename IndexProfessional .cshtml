@model IEnumerable<Universal_Task.Models.ProfessionalDetail_Table>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Go To Create Page", "Create")
</p>
<h2>Professional List</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>EmployeeCode</th>
            <th>EmployeePFNo</th>
            <th>Salary</th>
            <th>MarrigeAnniversaryDate</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @item.id
                </td>*@

                <td>
                    @item.EmployeeCode
                </td>

                <td>
                    @item.EmployeePFNo
                </td>

                <td>
                    @item.Salary
                </td>

                <td>
                    @item.MarrigeAnniversaryDate
                </td>

                <td>
                    @Html.ActionLink("Edit", "edit", new { id = item.id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.id }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete?');" })

                </td>
            </tr>
        }

    </tbody>
</table>

